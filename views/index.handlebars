<div style="background:transparent !important" class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4"> OPEN: Lettuce, Meet Patty </h1>
  </div>
</div>


<div class = "list1">
<h2 class = "burgerList"> Burger Wish-List </h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burgers-block devoured=true}}
        {{/unless}}
        {{/each}}
</ul>
</div>

<div class = "list2">
<h2 class = "devoured"> Devoured Burgers </h2>
<ul>
    {{#each burgers}}
    {{#if devoured}}
    {{> burgers/burgers-block devoured=false}}
    {{/if}}
    {{/each}}
</ul>
</div>

<div class = "add">
<h2 class = "addBurger"> Add a Burger! </h2>
<form class ="create-form">

    <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured? </label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Wish-List!
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>